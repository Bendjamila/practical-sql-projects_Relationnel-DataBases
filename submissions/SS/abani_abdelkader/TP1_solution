-- SQL QUERIES

-- Q1. List of all students
SELECT last_name, first_name, email, level FROM students;

-- Q2. Professors in Computer Science
SELECT p.last_name, p.first_name, p.email, p.specialization 
FROM professors p
JOIN departments d ON p.department_id = d.department_id
WHERE d.department_name = 'Computer Science';

-- Q3. Courses with more than 5 credits
SELECT course_code, course_name, credits FROM courses WHERE credits > 5;

-- Q4. Students in L3
SELECT student_number, last_name, first_name FROM students WHERE level = 'L3';

-- Q5. Courses in semester 1
SELECT course_name, credits, semester FROM courses WHERE semester = 1;

-- Q6. Courses with their respective professor's name
SELECT c.course_name, CONCAT(p.last_name, ' ', p.first_name) AS professor_name
FROM courses c
LEFT JOIN professors p ON c.professor_id = p.professor_id;

-- Q7. Enrollments with student and course names
SELECT CONCAT(s.last_name, ' ', s.first_name) AS student_name, c.course_name, e.status
FROM enrollments e
JOIN students s ON e.student_id = s.student_id
JOIN courses c ON e.course_id = c.course_id;

-- Q8. Students and their department
SELECT CONCAT(s.last_name, ' ', s.first_name) AS student_name, d.department_name
FROM students s
JOIN departments d ON s.department_id = d.department_id;

-- Q9. Detailed grades by student and course
SELECT s.last_name, c.course_name, g.grade
FROM grades g
JOIN enrollments e ON g.enrollment_id = e.enrollment_id
JOIN students s ON e.student_id = s.student_id
JOIN courses c ON e.course_id = c.course_id;

-- Q10. Number of courses taught by each professor
SELECT p.last_name, COUNT(c.course_id) AS num_courses
FROM professors p
LEFT JOIN courses c ON p.professor_id = c.professor_id
GROUP BY p.professor_id;

-- Q11. Overall average grade for each student
SELECT s.last_name, AVG(g.grade) AS average_grade
FROM students s
JOIN enrollments e ON s.student_id = e.student_id
JOIN grades g ON e.enrollment_id = g.enrollment_id
GROUP BY s.student_id;

-- Q12. Number of students per department
SELECT d.department_name, COUNT(s.student_id) AS total_students
FROM departments d
LEFT JOIN students s ON d.department_id = s.department_id
GROUP BY d.department_id;

-- Q13. Total cumulative budget of the university
SELECT SUM(budget) AS total_budget FROM departments;

-- Q14. Number of courses offered per department
SELECT d.department_name, COUNT(c.course_id) AS num_courses
FROM departments d
LEFT JOIN courses c ON d.department_id = c.department_id
GROUP BY d.department_id;

-- Q15. Average salary of professors per department
SELECT d.department_name, AVG(p.salary) AS average_salary
FROM departments d
JOIN professors p ON d.department_id = p.department_id
GROUP BY d.department_id;

-- Q16. Top 3 best students (highest average)
SELECT s.last_name, AVG(g.grade) AS avg_grade
FROM students s
JOIN enrollments e ON s.student_id = e.student_id
JOIN grades g ON e.enrollment_id = g.enrollment_id
GROUP BY s.student_id ORDER BY avg_grade DESC LIMIT 3;

-- Q17. Courses that currently have no enrollments
SELECT course_name FROM courses 
WHERE course_id NOT IN (SELECT course_id FROM enrollments);

-- Q18. Number of passed courses per student
SELECT s.last_name, COUNT(*) AS num_passed
FROM enrollments e
JOIN students s ON e.student_id = s.student_id
WHERE e.status = 'Passed' GROUP BY s.student_id;

-- Q19. Professors with heavy load 
SELECT p.last_name, COUNT(c.course_id) AS num_courses
FROM professors p
JOIN courses c ON p.professor_id = c.professor_id
GROUP BY p.professor_id HAVING num_courses > 2;

-- Q20. Students enrolled in more than 2 courses
SELECT s.last_name, COUNT(e.course_id) AS num_courses
FROM students s
JOIN enrollments e ON s.student_id = e.student_id
GROUP BY s.student_id HAVING num_courses > 2;

-- Q21. Students performing better than their department average
SELECT s.last_name, AVG(g.grade) AS student_average
FROM students s
JOIN enrollments e ON s.student_id = e.student_id
JOIN grades g ON e.enrollment_id = g.enrollment_id
GROUP BY s.student_id, s.department_id
HAVING student_average > (
    SELECT AVG(g2.grade) FROM grades g2 
    JOIN enrollments e2 ON g2.enrollment_id = e2.enrollment_id
    JOIN students s2 ON e2.student_id = s2.student_id
    WHERE s2.department_id = s.department_id
);

-- Q22. Courses more popular than average
SELECT c.course_name, COUNT(e.enrollment_id) AS num_enrolled
FROM courses c
JOIN enrollments e ON c.course_id = e.course_id
GROUP BY c.course_id
HAVING num_enrolled > (SELECT COUNT(*) / COUNT(DISTINCT course_id) FROM enrollments);

-- Q23. Professors working in the richest department
SELECT p.last_name, d.department_name FROM professors p
JOIN departments d ON p.department_id = d.department_id
WHERE d.budget = (SELECT MAX(budget) FROM departments);

-- Q24. Students with no recorded grades
SELECT s.last_name, s.email FROM students s
WHERE s.student_id NOT IN (
    SELECT e.student_id FROM enrollments e 
    JOIN grades g ON e.enrollment_id = g.enrollment_id
);

-- Q25. Departments larger  than average
SELECT d.department_name, COUNT(s.student_id) AS num_students
FROM departments d
JOIN students s ON d.department_id = s.department_id
GROUP BY d.department_id
HAVING num_students > (SELECT COUNT(*) / COUNT(DISTINCT department_id) FROM students);
-- The average is the number of students / number of departments

-- Q26. Success rate per course 
SELECT c.course_name, (SUM(CASE WHEN g.grade >= 10 THEN 1 ELSE 0 END) * 100.0 / COUNT(g.grade)) AS success_rate
-- This mathematical formula calculates the success percentage
-- CASE WHEN g.grade >= 10 THEN 1 ELSE 0 END; if the grade is >= 10 it will be 1, otherwise 0, the sum gives us the number of students who passed
FROM courses c
JOIN enrollments e ON c.course_id = e.course_id
JOIN grades g ON e.enrollment_id = g.enrollment_id
GROUP BY c.course_id;

-- Q27. Ranking of students by overall average
-- RANK(); allows to create a ranking according to a given list OVER (ORDER BY AVG(g.grade) DESC)
SELECT RANK() OVER (ORDER BY AVG(g.grade) DESC) AS rank,
       CONCAT(s.last_name, ' ', s.first_name) AS name,
       AVG(g.grade) AS average
FROM students s
JOIN enrollments e ON s.student_id = e.student_id
JOIN grades g ON e.enrollment_id = g.enrollment_id
GROUP BY s.student_id;

-- Q28. Grade report for student ID 1
SELECT c.course_name, g.evaluation_type, g.grade, (g.grade * g.coefficient) AS weighted_grade
FROM grades g
JOIN enrollments e ON g.enrollment_id = e.enrollment_id
JOIN courses c ON e.course_id = c.course_id
WHERE e.student_id = 1;

-- Q29. Workload per professor
SELECT p.last_name, SUM(c.credits) AS total_credits
FROM professors p
JOIN courses c ON p.professor_id = c.professor_id
GROUP BY p.professor_id;

-- Q30. Course capacity utilization 
SELECT c.course_name, (COUNT(e.student_id) * 100.0 / c.max_capacity) AS capacity_percentage
-- Capacity percentage: number of students per enrollment * 100 to get a percentage, all divided by the course capacity
FROM courses c
LEFT JOIN enrollments e ON c.course_id = e.course_id
GROUP BY c.course_id;
